<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Süper bir E-Ticaret sitesi">
    <meta name="keywords" content="e-ticaret alışveriş mvc c#">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCStore - Güvenli Alışverişin Adresi</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" integrity="sha512-5PV92qsds/16vyYIJo3T/As4m2d8b6oWYfoqV+vtizRB6KhF1F9kYzWzQmsO6T3z3QG2Xdhrx7FQ+5R1LiQdUA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900&display=swap"
          rel="stylesheet">

</head>
<body>

    <div id="preloder">
        <div class="loader"></div>
    </div>

    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>


    <div class="header-info">
        <div class="container-fluid">

        </div>
    </div>

    <header class="header-section">
        <div class="container-fluid">
            <div class="inner-header">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt=""></a>
                </div>
                <div class="user-access">
                    @await Component.InvokeAsync("UserBar")
                </div>
                <nav class="main-menu mobile-menu">
                    <ul>
                        @await Component.InvokeAsync("RayonBar")
                        <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li><a asp-controller="Home" asp-action="ContactUs">İletişim</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>


    <div class="container-fluid mb-5 p-0">
        @RenderBody()
    </div>

    <footer class="footer-section spad">
        <div class="container">
            <div class="footer-widget">
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div class="single-footer-widget">
                            <h4>About us</h4>
                            <ul>
                                <li>About Us</li>
                                <li>Community</li>
                                <li>Jobs</li>
                                <li>Shipping</li>
                                <li>Contact Us</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="single-footer-widget">
                            <h4>Customer Care</h4>
                            <ul>
                                <li>Search</li>
                                <li>Privacy Policy</li>
                                <li>2019 Lookbook</li>
                                <li>Shipping & Delivery</li>
                                <li>Gallery</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="single-footer-widget">
                            <h4>Our Services</h4>
                            <ul>
                                <li>Free Shipping</li>
                                <li>Free Returnes</li>
                                <li>Our Franchising</li>
                                <li>Terms and conditions</li>
                                <li>Privacy Policy</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="single-footer-widget">
                            <h4>Information</h4>
                            <ul>
                                <li>Payment methods</li>
                                <li>Times and shipping costs</li>
                                <li>Product Returns</li>
                                <li>Shipping methods</li>
                                <li>Conformity of the products</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="social-links-warp">
            <div class="container">
                <div class="social-links">
                    <a href="" class="instagram"><i class="fa-brands fa-instagram"></i><span>instagram</span></a>
                    <a href="" class="pinterest"><i class="fa-brands fa-pinterest"></i><span>pinterest</span></a>
                    <a href="" class="facebook"><i class="fa-brands fa-facebook"></i><span>facebook</span></a>
                    <a href="" class="twitter"><i class="fa-brands fa-twitter"></i><span>twitter</span></a>
                    <a href="" class="youtube"><i class="fa-brands fa-youtube"></i><span>youtube</span></a>
                    <a href="" class="tumblr"><i class="fa-brands fa-tumblr-square"></i><span>tumblr</span></a>
                </div>
            </div>
            <div class="container text-center pt-5">
                <p>
                    Copyright &copy; @DateTime.Today.Year Tüm hakları saklıdır.
                </p>
            </div>


        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/mixitup.min.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(() => {
            $('body').on('mousedown', (e) => {
                //$('.category-panel').removeClass('show').css('z-index', '-1');
            });

            $('a.rayon-btn').on('click', (e) => {

                $('.category-panel').removeClass('show').addClass('d-none').css('z-index', '-1');
                const id = $(e.currentTarget).attr('data-category-id');
                $('div#categoryPanel_' + id).addClass('show').removeClass('d-none').css('z-index', '1');
            });

        });
        @if (TempData["addedToCart"] is not null) {
            <text>
                Swal.fire({
                    html: 'Ürün sepetinize eklendi...<a href="/Account/shoppingcart">sepete git</a>',
                icon: 'success',
                toast: true,
                confirmButtonText: 'Alışverişe Devam Et',
                position: 'top-end'
                });
            </text>
        }
    </script>
</body>
</html>
